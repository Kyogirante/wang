<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/margin_padding_15"
        android:layout_marginLeft="@dimen/margin_padding_15"
        android:layout_marginRight="@dimen/margin_padding_15"
        android:orientation="vertical">
        <com.example.wang.myapplication.UI.Consume.UserDefaultListView
            android:id="@+id/consume_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/margin_padding_15"
            android:scrollbars="none" />
        <TextView
            android:id="@+id/desc_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_15"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_medium"
            android:text="@string/desc_no_consume_msg"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="@dimen/margin_padding_10"
        android:layout_marginTop="@dimen/margin_padding_10"
        style="@style/Button.Normal"
        android:text="@string/add_btn_text"/>
    <Button
        android:id="@+id/btn_del"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="@dimen/margin_padding_10"
        android:layout_marginTop="@dimen/margin_padding_10"
        style="@style/Button.Normal"
        android:text="@string/delete_btn_text"
        android:visibility="gone"/>
</LinearLayout>
