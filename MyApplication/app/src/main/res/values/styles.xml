<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBarMenu</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoTitle.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Button">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_10</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_10</item>
        <item name="android:paddingLeft">@dimen/margin_padding_10</item>
        <item name="android:paddingRight">@dimen/margin_padding_10</item>
    </style>

    <style name="Button.Red">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>
    <style name="MyActionBarMenu" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>
</resources>
